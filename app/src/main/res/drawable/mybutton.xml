<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4B0082" />
            <gradient android:angle="-90" android:startColor="#4B0082" android:endColor="#4B0082"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4B0082" />
            <solid android:color="#4B0082"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#074CBC" />
            <gradient android:angle="-90" android:startColor="#074CBC" android:endColor="#074CBC" />
        </shape>
    </item>
</selector>